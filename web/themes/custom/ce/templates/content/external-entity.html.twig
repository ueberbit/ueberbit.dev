{#
/**
 * @file
 * Default theme implementation to display an external entity.
 *
 * Available variables:
 * - entity: The external entity.
*/
#}

{% extends "@ce/content/node.html.twig" %}

 {% set tagname = [
  tagname_prefix,
  'node',
  bundle,
  elements['#view_mode'] is not iterable ? elements['#view_mode']|trim
]|join('-') %}

{% block vars %}
  {% set attributes = external_entity.title.value is not iterable ? attributes.setAttribute('title', external_entity.title.value|trim)  %}
  {% set attributes = external_entity.id.value is not iterable ? attributes.setAttribute('url', '/' ~ entity_type ~ '/' ~ external_entity.id.value )  %}
  {% set attributes = elements['#view_mode'] is not iterable ? attributes.setAttribute('view-mode', elements['#view_mode']|trim)  %}
  {% set attributes = attributes.setAttribute('bundle', bundle)  %}
{% endblock %}
